---
layout: null
---
[
  {% for post in site.posts %}
  {% if post.lang == 'zh' %}
    {
      "title"      : {{ post.title | jsonify }},
      "categories" : "{{ post.categories | join: " " }}",
      "tags"       : "{{ post.tags | join: " " }}",
      "url"        : "{{ site.baseurl }}{{ post.url }}",
      "date"       : "{{ post.date }}",
      "lang"       : "{{ post.lang }}",
      "content"    : {{ post.content | jsonify }}
    }
  {% else %}
    {
      "title"      : "",
      "categories" : "",
      "tags"       : "",
      "url"        : "",
      "date"       : "",
      "lang"       : "",
      "content"    : ""
    }
  {% endif %}
  {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
